<?xml version="1.0"?>
<odoo>
    <data>
        <template id="inherited_report_saleorder_document" inherit_id="sale.report_saleorder_document" priority="100">

            <!-- Table Column Header -->
            <xpath expr="//table[hasclass('table','table-sm','o_main_table')]//thead//tr//th[1]" position="before">
                <th>Part ID</th>
            </xpath>
            <!-- Table Column Values -->
            <xpath expr="//table[hasclass('table','table-sm','o_main_table')]//tbody[hasclass('sale_tbody')]//tr//td[1]" position="before">
                <td><span t-field="line.product_id.default_code"/></td>
            </xpath>

            <!-- Add a nice Message on top of notes -->
            <xpath expr="//p[@t-field='doc.note']" position="replace">
                <p>Thank you and have a wonderfulday!</p>
            </xpath>

            <!-- Only Print if a proforma invoice -->
            <xpath expr="//div[hasclass('page')]//div[hasclass('row', 'mt32', 'mb32')]" position="before">
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <h3>Important Message!!</h3>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
